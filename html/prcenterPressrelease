<script>
$(document).ready(function () {
	initAllGnb();
	initHeaderBanner();

	$('.gnb-depth2-list .list-item a').on('click', function () {
		closeMobileGnb();
		closeDesktopGnbModal();
	});
	
});

$(window).on('resize', function () {
	initAllGnb();
});

function initAllGnb() {
	let mobileGnbTimeout = null;

	if ($('.check-desktop').is(':visible')) { // desktop
		if (!$('#header').hasClass('desktop')) {
			clearTimeout(mobileGnbTimeout);
			clearAllGnb();
			initDesktopGnb();

			$('#header').addClass('desktop');
		}
	} else if ($('.check-tablet').is(':visible')){ // tablet
		if (!$('#header').hasClass('tablet')) {
			clearTimeout(mobileGnbTimeout);
			clearAllGnb();
			initMobileGnb();

			$('#header').addClass('tablet');
		}
	} else if ($('.check-mobile').is(':visible')) { // mobile
		if (!$('#header').hasClass('mobile')) {
			clearAllGnb();
			initMobileGnb();
			
			// 모바일일 때 gnb 잠깐 보였다가 들어가는 현상 fix
			$('#gnb').css({ visibility: 'hidden' });
			mobileGnbTimeout = setTimeout(function () {
				$('#gnb').css({ visibility: 'visible' });
			}, 500);

			$('#header').addClass('mobile');
		}
	}
}

function clearAllGnb() {
	closeMobileGnb();
	closeDesktopGnbModal();

	$('.header-toggle').off('click.initDesktopGnb');
	$('.header-toggle').off('click.initMobileGnb');
	$('.header-dim').off('click.initDesktopGnb');
	$('.header-dim').off('click.initMobileGnb');
	$('#header').removeClass('desktop tablet mobile');
	$('#gnb').css({ visibility: 'visible' });
}

function initDesktopGnb() {
	initDesktopGnbModal();

	$('.header-toggle').on('click.initDesktopGnb', function () {
		openDesktopGnbModal();
	});

	$('.header-dim').on('click.initDesktopGnb', function () {
		closeDesktopGnbModal();
	});

	$('.desktop-gnb-modal .modal-close').on('click', function () {
		closeDesktopGnbModal();
	});
}

function initMobileGnb() {
	$('.header-toggle').on('click.initMobileGnb', function () {
		if (!$(this).hasClass('active')) {
			openMobileGnb();
		} else {
			closeMobileGnb();
		}
	});

	$('.header-dim').on('click.initMobileGnb', function () {
		closeMobileGnb();
	});
}

function initDesktopGnbModal() { 
	if ($('.desktop-gnb-modal').children().length > 1) return;

	const gnbEl = $('#gnb').clone();
	$('.desktop-gnb-modal').append(gnbEl);
}

function openDesktopGnbModal() {
	$('.header-dim').addClass('active');
	$('.desktop-gnb-modal').stop().fadeIn();
	$('#container .tab').addClass('inactive');
}

function closeDesktopGnbModal() {
	$('.header-dim').removeClass('active');
	$('.desktop-gnb-modal').hide();
	$('#container .tab').removeClass('inactive');
}

function openMobileGnb() {
	$('body').css({ overflow: 'hidden' });
	$('#gnb').addClass('active');
	$('.header-toggle').addClass('active');
	$('.header-dim').addClass('active');
	$('#container .tab').addClass('inactive');
}

function closeMobileGnb() {
	$('body').css({ overflow: 'visible' });
	$('#gnb').removeClass('active').scrollTop(0);
	$('.header-toggle').removeClass('active');
	$('.header-dim').removeClass('active');
	$('#container .tab').removeClass('inactive');
}

function initHeaderBanner() {
	const cookieName = 'header-banner';

	// 쿠키가 있으면
	if ($.cookie(cookieName) === '1') {
		$('.header-banner').hide();
	}

	// 쿠키가 없으면
	$('.header-banner .banner-close-button').on('click', function () {
		if ($('.header-banner .banner-check input').is(':checked')) {
			$.cookie(cookieName, '1', { expires: 1, path: "/" });
		}

		$('.header-banner').hide();
	});
}

</script>
<!-- header end -->
