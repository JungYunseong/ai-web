<script>
$(document).ready(function () {
	// initChatbot();
});

function initChatbot() {
	$('.chatbot-open-button').on('click', function () {
		$('.chatbot-modal').addClass('active');

		$("#chatbot").vaivChatbot({			
			key : 'ICe2j-1677139942991',
			baseUrl : "https://chat.vaiv.kr",
			isUseGeolocation : true,
			isScrollStopAtQuestion : true,
			style : {
				height: "80vh",		
				theme : "vaiv"		
			},
			ui: {
				closeBtn: true,
			},
			onClose: function () {
				// console.log('chatbot close');
				$('.chatbot-modal').removeClass('active');
			},
		});
	});
}
</script>
