<script>
$(document).ready(function() {
	var url = location.href;
	var urlArray = url.split("/");
	if($.inArray("customer",urlArray) > -1){
		$(".gnb_list li a").removeClass("on");
		$("#reference").addClass("on");
	}else{
		$(".gnb_list li a").each(function(){
			var id = $(this).attr("id");
			if($.inArray(id,urlArray) > -1){
				$(".gnb_list li a").removeClass("on");
				$("#"+id).addClass("on");
			}
		})
	}
	
    // URL의 쿼리스트링에서 UTM 파라미터 추출
    function getUTMParams() {
        const params = new URLSearchParams(window.location.search);
        const utmParams = {};
        ['utm_source', 'utm_medium', 'utm_campaign'].forEach((key) => {
            if (params.has(key)) {
                utmParams[key] = params.get(key);
            }
        });
        return utmParams;
    }

    // UTM 파라미터를 쿠키에 저장
    function saveUTMParamsToCookies(utmParams) {
        const expirationDays = 1; // 쿠키 만료일: 1일
        Object.keys(utmParams).forEach((key) => {
            $.cookie(key, utmParams[key], { expires: expirationDays, path: '/' });
        });
    }
    
    // 쿠키 저장 실행
    const utmParams = getUTMParams();
    if (Object.keys(utmParams).length > 0) {
        saveUTMParamsToCookies(utmParams);
    }
    
}); 
</script>
